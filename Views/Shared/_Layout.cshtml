<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (Session["Username"] == null)
                {
                    @Html.ActionLink("Glosy_TestCase", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
                else
                {
                    @Html.ActionLink(Session["Username"].ToString(), "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Haberler", "Index", "News")</li>

                    @if (Session["Username"] == null)
                    {
                        <li>@Html.ActionLink("Giriş Yap", "Index", "Login")</li>
                        <li>@Html.ActionLink("Kaydol", "Index", "Register")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Admin Paneli", "Index", "Admin")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="overflow-x:auto;">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>