@model Glosy_TestCase.Models.Classes.News
@{
    ViewBag.Title = "AddNewNews";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h2>Yeni Haber Ekle</h2>
    <br />
    <form class="form-group" method="post">
        @Html.LabelFor(x => x.CategoryID)
        @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })

        @Html.LabelFor(x => x.UserID)
        @Html.TextBoxFor(x => x.UserID, new { @class = "form-control" })

        @Html.LabelFor(x => x.Title)
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })

        @Html.LabelFor(x => x.Description)
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })

        @Html.LabelFor(x => x.Detail)
        @Html.TextBoxFor(x => x.Detail, new { @class = "form-control" })

        @Html.LabelFor(x => x.Link)
        @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })

        @Html.LabelFor(x => x.Image)
        @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })

        @Html.LabelFor(x => x.Date)
        @Html.TextBoxFor(x => x.Date, new { @class = "form-control"})
        <br>
        <button class="btn btn-success">Ekle</button>
    </form>
</div>