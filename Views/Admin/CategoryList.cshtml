@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Haber Kategorileri</h2>
<table class="table table-bordered mt-3" style="width:100%;" id="myDataTable">
    <thead>
        <tr>
            <th>Kategori ID</th>
            <th>Kategori Adı</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td><a href="/Admin/GetCategory/@item.ID" class="btn btn-primary">Güncelle</a></td>
                <td><a href="/Admin/DeleteCategory/@item.ID" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Admin/AddNewCategory" class="btn btn-primary">Yeni Kategori Ekle</a>