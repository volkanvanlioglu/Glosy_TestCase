@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Girişi Yap</title>
    <link href="~/css/Login.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="contact-form">
            <h2>Admin Girişi Yap</h2>
            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                <div class="txtb">
                    <input type="text" name="Username" placeholder="Kullanıcı Adı" id="Username">
                </div>
                <div class="txtb">
                    <input type="password" name="Password" placeholder="Parola" id="Password">
                </div>
                <input type="submit" class="logbtn" value="Login" id="login">
            }
        </div>
    </div>
</body>
</html>

<script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>
<script src="~/js/Login.js"></script>