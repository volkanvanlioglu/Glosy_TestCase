
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>@Model.Title</h2>

    <div class="col-xl-8">
        <div id="image"><img src="@Model.Image" title="@Model.Title" style="width:100%; height:50%;"></div>
        <div id="description" style="margin-top:5px;"><strong>Haber Açıklaması: </strong>@Model.Description</div>
    </div>
    <br>
    <div class="col-xl-4"></div>
    <br>
    <div class="col-xl-8">
        <div id="detail" style="margin-top:5px;"><strong>Haber Detayı: </strong>@Model.Detail</div>
    </div>
    <br>
    <div class="col-xl-4"></div>
    <br>
    <div class="col-xl-8">
        <div id="date" style="margin-top:5px;"><strong>Eklenme tarihi: </strong>@Model.Date</div>
        <div id="user" style="margin-top:5px;"><strong>Ekleyen: </strong>@ViewBag.Users[Model.UserID - 3].Username</div>
    </div>
    <br>
    <div class="col-xl-4"></div>
</div>